---
import { getImages } from '../scripts/generateImages';

const artImages = getImages("art").map((img) => `/art/${img}`);

import Layout from '../layouts/Layout.astro';
---

<Layout title="art - kevinatruong">
    <div class="lg:columns-2 gap-3 [column-fill:_balance]">
        {artImages.map((image) => (
          <img src={image} alt="Art" class="w-full object-cover shadow-xl mb-4 transition" />
        ))}
      </div>
</Layout>

