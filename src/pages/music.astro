---
import Layout from '../layouts/Layout.astro';

const response = await fetch('https://kevinatruong.com/api/spotify/data');
const spotifyData = await response.json();
---

<Layout title="music - kevinatruong">
	<main>
		<div class="profile">
			<div class="profile-pic">
				<img src={spotifyData.user_profile.profile_image} alt="Profile Image" />
			</div>
			<div class="profile-info">
				<h1>{spotifyData.user_profile.display_name}</h1>
				<h3>Currently playing</h3>
				<div class="currently-playing">
					{spotifyData.currently_playing ? (
						<div class="currently-playing-pic">
							<img src={spotifyData.currently_playing.track.album_image} alt={spotifyData.currently_playing.track.album} />
						</div>
						<div class="currently-playing-info">
							<h4>{spotifyData.currently_playing.track.name}</h4>
							<h5>{spotifyData.currently_playing.track.artists}</h5>
						</div>
					) : <p>Nothing Playing</p>}
				</div>
			</div>
		</div>

		<h2>top artists this month</h2>
		<div class="artists-container">
			<div class="artists">
				{spotifyData.top_artists.map((artist) => (
					<div class="artist">
						<img src={artist.images} alt={artist.name} />
						<p>{artist.name}</p>
					</div>
				))}
			</div>
		</div>
		
		<h2>top tracks this month</h2>
		<div class="tracks">
			{spotifyData.top_tracks.map((track) => (
				<div class="track">
					<div class="track-pic">
						<img src={track.album_image} alt={track.album} />
					</div>
					<div class="track-info">
						<h4>{track.name}</h4>
						<h5>{track.artists}</h5>
					</div>
				</div>
			))}
		</div>

		<h2>my playlists</h2>
		<div class="playlists-container">
			<div class="playlists">
				{spotifyData.user_playlists.map((playlist) => (
					<div class="playlist">
						<img src={playlist.images} alt={playlist.name} />
						<p>{playlist.name}</p>
					</div>
				))}
			</div>
		</div>

		<br></br>
		<br></br>
	</main>
</Layout>
<style>
	main {
		margin: 0;
		margin-top: 150px;
		font-size: .5em;
	}
	h2 {
		margin: 40px 20px 20px;
	}
	img {
		object-fit: cover;
	}
	/* profile section ============================ */
	.profile {
		display: flex;
		margin: 20px;
	}
	.profile-pic img {
		width: 200px;
		height: 200px;
		object-fit: cover;
	}
	.profile-info {
		margin: 10px;
		margin-right: 0;
	}
	.profile-info h1,
	.profile-info h3 {
		margin: 10px 0;
	}
	
	.currently-playing {
		display: flex;
		flex-direction: row;
		margin: 0px;
	}
	.currently-playing-pic img {
		width: 75px;
		height: 75px;
	}
	.currently-playing-info {
		margin: auto 10px;
	}
	.currently-playing-info h4,
	.currently-playing-info h5 {
		margin: 0;
		/* font-size: 12px; */
	}

	/* artists section ============================ */
	.artists-container {
		overflow-x: auto;
		max-width: 100%;
	}
	.artists-container::-webkit-scrollbar {
		display: none;
	}
	.artists {
		display: flex;
		flex-direction: row;
	}
	.artist {
		flex: 0 0 200px;
		margin-left: 20px;
	}
	.artist img {
		width: 100%;
		height: 200px;
		border-radius: 100px;
	}
	.artist p {
		margin: 0;
	}
	
	/* tracks section ============================ */
	.tracks {
		margin: 20px;
	}
	.track {
		display: flex;
		flex-direction: row;
		margin: 5px;
	}
	.track-pic img {
		width: 75px;
		height: 75px;
	}
	.track-info {
		margin: auto 10px;
	}
	.track-info h4,
	.track-info h5 {
		margin: 0;
	}

	/* playlists section ============================ */
	.playlists-container {
		overflow-x: auto;
		max-width: 100%;
	}
	.playlists-container::-webkit-scrollbar {
		display: none;
	}
	.playlists {
		display: flex;
		flex-direction: row;
	}
	.playlist {
		flex: 0 0 250px;
		margin-left: 20px;
	}
	.playlist img {
		width: 100%;
		height: 250px;
	}
	.playlist p {
		/* font-size: 20px; */
		margin: 0;
	}
	@media screen and (max-width: 768px) {
		main {
			margin: 0;
		}
		.profile {
			margin: 10px;
		}
		h2 {
			margin: 25px 10px 10px;
		}
		.artist {
			margin-left: 10px;
		}
		.tracks {
			margin: 10px;
		}
		.playlist {
			margin-left: 10px;
		}
	}
</style>
