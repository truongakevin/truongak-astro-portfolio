---
import VideoPlayer from "./VideoPlayer";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mobile Video Player Test</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #121212;
      color: #fff;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      text-align: center;
    }

    .container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 100%;
      max-width: 375px;
      margin: 0 auto;
    }

    .player-container {
      width: 100%;
      max-width: 375px;
      height: 210px; /* Adjust for your video aspect ratio */
      margin-top: 20px;
    }

    iframe {
      width: 100%;
      height: 100%;
      border: none;
      border-radius: 10px;
    }

    .title {
      font-size: 1.5rem;
      margin-bottom: 10px;
    }

    .description {
      font-size: 1rem;
      margin-top: 0;
    }
  </style>
</head>
<body>
  <div class="container">
    <VideoPlayer client:only="react" />
  </div>
</body>
</html>