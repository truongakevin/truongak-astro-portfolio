---

import Layout from '../layouts/Layout.astro';
import { getImages } from '../scripts/generateImages'
const artImages = getImages("info").map((img) => `/info/${img}`);
---

<Layout title="info - kevinatruong">
	<main>
        <div class="photos">
            {artImages.map((image) => (
              <img src={image} alt="Art" />
            ))}
        </div>
        <div class="information">
            <!-- <br> -->
            <p>born in 2001</p>
            <!-- <br> -->
            <p>software engineer from colorado</p>
            <!-- <br> -->
            <p>develops software and apps</p>
            <!-- <br> -->
            <p>specializes in web development and machine learning</p>
            <!-- <br> -->
            <p>makes digital art, paintings, and drawings</p>
            <!-- <br> -->
            <p><a id="contact" href="/contact">email me</a></p>
        </div>
	</main>
</Layout>

<style>
	main {
        font-size: 24px;
        font-weight: 500;
	}
    .photos img {
        padding-right: 10px;
        width: 33%;
    }
    P {
        margin: 20px 0;
    }
    a {
        /* text-decoration: none; */
        color: var(--primary);
    }
</style>
