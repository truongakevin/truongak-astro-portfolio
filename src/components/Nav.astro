---
const { currentPath } = Astro.props;

function isActive(path) {
console.log(currentPath);
return currentPath === path ? 'current' : '';
}
---

<nav>
    <!-- <nav class={currentPath === ('/') ? 'nav-slide-in' : ''}> -->
    <a class={isActive('/')} href="/">KEVINATRUONG</a>
    <a class={isActive('/info')} href="/info">INFO</a>
    <a class={isActive('/contact')} href="/contact">KONTAKT</a>
    <a class={isActive('/projects')} href="/projects">PROJEKTS</a>
    <a class={isActive('/art')} href="/art">ART</a>
    <a class={isActive('/music')} href="/music">MUSIK</a>
</nav>

<style>
    @media screen and (min-width: 768px){
        nav {
            width: 30%;
            position: fixed;
            height: 100vh;
            z-index: 1;
        }
    }
    nav {
        background-color: var(--primary);
        align-items: end;
        display: flex;
        flex-direction: column;
        padding: 100px 20px 0;
    }

    nav a {
        color: var(--secondary);
        text-decoration: none;
        transition: all .25s ease-in-out;
    }

    nav a:hover {
        padding-right: 25px;
    }

    nav a.current {
        color: var(--accent);
        pointer-events: none;
        cursor: default;
    }

    nav a.current:hover {
        margin-right: 0;
    }

    @keyframes navSlideIn {
        0% {
            width: 0%;
            padding: 0;
        }
        50% {
            width: 0%;
        }
        100% {
            width: 30%;
        }
    }
    
    .nav-slide-in {
        animation: navSlideIn 1.5s ease-in-out forwards;
    }
    
    @media screen and (max-width: 768px){
        nav {
            padding: 10px 10px;
        }
        @keyframes navSlideIn {
            0% {
                margin: -250px auto;
            }
            50% {
                margin: -250px auto;
            }
            100% {
                margin: 0;
            }
        }
    }
</style>
